{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["es2020"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "prisma/seed.ts"],
  "exclude": ["node_modules", "dist"]
}
